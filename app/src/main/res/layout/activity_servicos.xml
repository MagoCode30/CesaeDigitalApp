<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".servicos.ServicosActivity"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- Toolbar Material -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6f42c1"
        app:title="Serviços"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        android:layout_alignParentTop="true"/>

    <!-- Conteúdo scrollável com cards de serviço -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Card 1: WebSIGA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/servicos1"
                        android:contentDescription="WebSIGA"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WebSIGA"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#512DA8"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aplicação Informática de Gestão de Projetos de Formação"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:ellipsize="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Centro de Exames -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/servicos2"
                        android:contentDescription="Centro de Exames"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Centro de Exames"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#512DA8"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Atualmente o Centro de Exames do CESAE tem associados os seguintes parceiros: Kryterion e Pearson VUE."
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:ellipsize="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Aplicações SAGE -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/servicos3"
                        android:contentDescription="Aplicações SAGE"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aplicações SAGE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#512DA8"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comercialização, Implementação e suporte a aplicações SAGE"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:ellipsize="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>