<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".projetos.ProjetosActivity"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6f42c1"
        app:title="Projetos"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"
        android:layout_alignParentTop="true"/>

    <!-- Cards Scrolláveis -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/projeto1"
                        android:contentDescription="Digital Reskilling"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#Digital Reskilling"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#512DA8"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cursos de longa duração para adultos desempregados com formação intermédia ou superior (no mínimo, nível 3). Inserem-se num programa de requalificação e desenvolvimento de competências nas áreas digitais emergentes."
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:ellipsize="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/projeto2"
                        android:contentDescription="Emprego Digital"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emprego +Digital"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#512DA8"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cursos de formação e requalificação na área digital dirigidos a adultos empregados que pretendam melhorar as competências e qualificações na sua área profissional. São cursos de curta duração e realizam-se, maioritariamente, na modalidade online."
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:ellipsize="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/projeto3"
                        android:contentDescription="Aprendizagem +"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aprendizagem +"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#512DA8"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cursos de formação de dupla certificação de nível pós-secundário não superior, para jovens até aos 29 anos de idade com o 12º ano, com uma duração superior a um ano, que conferem o nível 5 de qualificação do Q.N.Q."
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="5"
                        android:ellipsize="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>